<div class="row">
    <div class="col-md-6 mt-5 pl-5 m-auto">
        <h2 class="text=center">Create new account</h2>
        <form action="/signup" method="POST">
            <div class="form-group">
                <label for="">Name</label>
                <input type="text" class="form-control" name="name" placeholder="Enter Name" id="">
            </div>
            <div class="form-group">
                <label for="">Email address</label>
                <input type="email" class="form-control" name="email" placeholder="Enter a email address" id="">
            </div>
            <div class="form-group">
                <label for="">Password</label>
                <input type="password" class="form-control" name="password" placeholder="Password" id="">
            </div>
            <a href="/login">Already have account</a>
            <button type="submit" class="btn btn-primary float-right">Signup</button>
        </form>
    </div>

</div>