            .card {
                border: 1px solid #dddddd; /* Light gray border */
                border-radius: 8px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
                transition: box-shadow 0.3s ease-in-out;
            }
            .card:hover {
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Hover shadow effect */
            }
            .card-title {
