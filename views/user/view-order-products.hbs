<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 p-3">
                <div class="card">
                    <img class="card-img-top" src="/product-images/{{this.product._id}}.png" alt="Product Image">
                    <div class="card-body">
                        <h5 class="card-title">{{this.product.name}}</h5>
                        <h6 class="card-text">Rs.{{this.product.price}}</h6>
                        <p class="card-text">{{this.product.description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
 <style>
