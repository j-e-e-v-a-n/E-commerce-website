<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f1f3f6;
            color: #212121;
        }
        .container {
            width: 90%;
            max-width: 1200px;
            margin: 2rem auto;
        }
        .cart {
            padding: 2rem;
            background-color: #ffffff;
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .product-image {
            max-width: 100%;
            height: auto;
            border-radius: 0.5rem;
        }
        .quantity-buttons {
            display: flex;
            align-items: center;
        }
        .quantity-buttons button {
            margin: 0 0.5rem;
            background-color: #2874f0;
            color: white;
            border: none;
            padding: 0.5rem;
            border-radius: 0.25rem;
        }
        .quantity-buttons button:hover {
            background-color: #1a5bb8;
        }
        .total-price {
            font-size: 1.5rem;
            font-weight: bold;
            color: #2874f0;
        }
        .btn-danger {
            background-color: #ff5722;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 0.25rem;
        }
        .btn-danger:hover {
            background-color: #e64a19;
        }
        .btn-success {
            background-color: #388e3c;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 0.25rem;
        }
        .btn-success:hover {
            background-color: #2e7d32;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center my-4">Your Shopping Cart</h1>
        {{#if product }}
        <div class="cart">
            <ul class="list-group">
                {{#each product }}
                <li class="list-group-item clearfix">
                    <div class="row">
                        <div class="col-md-2">
                            <img src="/product-images/{{this.product._id}}.png" alt="{{this.product.name}}" class="product-image">
                        </div>
                        
                        <div class="col-md-4">
                            <strong>{{ this.product.name }}</strong><br/>
                            <em>{{{this.product.description}}}</em>
                        </div>
                        <div class="col-md-2 text-right">
                            <div class="quantity-buttons">
                                <button class="btn btn-sm" id="cart-count-" onclick="changequantity('{{this._id}}','{{this.product._id}}',-1,0,'{{../user}}')">-</button>
                                <span class="badge badge-secondary" id="{{this.product._id}}">{{this.quantity}}</span>
                                <button class="btn btn-sm" id="cart-count+" onclick="changequantity('{{this._id}}','{{this.product._id}}',1,0,'{{../user}}')">+</button>
                            </div>
                        </div>
                        <div class="col-md-2 text-right">
                            Rs.{{this.product.price}} 
                        </div>
                        <div class="col-md-2 text-right">
                            <button class="btn btn-danger" onclick="changequantity('{{this._id}}','{{this.product._id}}',-1)">Remove</button>
                        </div>
                    </div>
                </li>
                {{/each}}
            </ul>
            <div class="text-right my-3">
                <span class="total-price">Total: Rs.<span id="total">{{total}}</span> </span>
            </div>
            <hr>
            <div class="text-right">
                <a href="check-out" type="button" class="btn btn-success">Checkout</a>
            </div>
        </div>
        {{ else }}
        <div class="alert alert-info text-center">
            Your shopping cart is empty.
        </div>
        {{/if}}
    </div>

    <script>
        function changequantity(cartid, proid ,count ,remove ,userid) {
            let quantity = parseInt(document.getElementById(proid).innerHTML);
            count = parseInt(count);
            console.log("url:'/change-product-quantity' called");
            $.ajax({
                url: '/change-product-quantity',
                data: {
                    user: userid,
                    cart: cartid,
                    product: proid,
                    count: count,
                    quantity: quantity,
                    remove: remove
                },
                method: 'post',
                success: (response) => { 
                    if (response.removeproduct) {
                        alert("Product removed from cart");
                        location.reload();
                    } else {
                        document.getElementById(proid).innerHTML = quantity + count;
                        document.getElementById('total').innerHTML = response.total;
                    }
                }
            });
        }
    </script>
</body>
</html>
